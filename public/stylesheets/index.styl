$black = #131515ff
$gray = #2b2c28ff
$light-gray = rgb(170, 170, 170)
$dark-purple = #ad75ad
$light-purple = #c8a2c8
$white = #fffafbff

body
    min-height 100vh
    color $white
    background-color $black
    font-family 'Rubik', sans-serif

header
    height 60px
    overflow hidden
    background-color $light-purple

.navbar span
    color $black

.navbar img
    width 100%
    height 40px
    object-fit cover
    object-position center
    box-shadow 0 0 40px 5px $dark-purple

.navbar-nav .active
    text-decoration underline
    text-decoration-color $gray

.greetings
    color $black
    border-right 1px solid $black

.btn-primary
    background-color $dark-purple
    border-color $dark-purple

main
    min-height 100vh
    margin 30px 0

.card
    border none

.list-group-item-light
    color $light-gray

.card-body
    flex none

table
    border-radius var(--bs-border-radius)
    overflow hidden

.table > :not(caption) > * > *
    border-bottom none

td img
    width 40px
    height 40px

tr td
    margin: auto 0

footer
    width 100vw
    height 30px
    font-size 0.8rem
    background-color $dark-purple