$black = #131515ff
$dark-purple = #ad75ad
$light-purple = #c8a2c8

main
    min-height calc(100vh - 150px)

.card > img
    height 500px
    object-fit cover
    vertical-align middle

td > img
    width 50px
    height 50px
    border-radius 50%
    object-fit cover
    vertical-align middle

.form-check-input
    background-color $black

.progress-bar
    background-color $dark-purple

.form-check-input:checked
    background-color $light-purple
    border-color $light-purple
