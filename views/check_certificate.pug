extends auth/auth_layout

block content
    main.d-flex.flex-column.justify-content-center.align-items-center
        .auth.container.py-3.px-3
            h2.text-center Verificação de certificado
            form(action="/certificates/check", method="GET")
                .mb-3
                    label(for="code", class="form-label") Código de certificado
                    input(type="text", class="form-control", id="code" name="code" required)
                .w-100.text-center.flex-column.d-flex.align-items-center.justify-content-center
                    button(type="submit", class="btn btn-primary mb-3") Verificar
                    span Você possui uma conta? 
                        a(href="/users/login") Log In

            if (typeof certificate !== 'undefined' && typeof certificate !== 'null')
                .alert.alert-success.text-center.mt-3
                    | Certificado verificado válido para "#{certificate.User.name}" no curso "#{certificate.Course.name}"
            else if (code === "false")
                .alert.alert-danger.text-center.mt-3
                    | Certificado inválido